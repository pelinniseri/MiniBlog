<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Bir yorum yazın </h3>
    <form method="post" class="p-5 bg-light">
        <div class="form-group">
            <label for="name">Kullanıcı adınız *</label>
            <input type="text" class="form-control" name="Username">
        </div>
        <div class="form-group">
            <label for="email">Email *</label>
            <input type="email" class="form-control" name="Mail">
        </div>
        <input type="hidden" name="CommentDate" value="@DateTime.Now.ToShortDateString()" />
        <input type="hidden" name="BlogId" value="@ViewBag.id" />

        <div class="form-group">
            <label for="message">Yorumun</label>
            <textarea name="CommentText" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label for="message">Puanın: </label>
           <label style="margin-right:10px">@Html.RadioButton("RatingForBlog", 1)1</label>
           <label style="margin-right:10px">@Html.RadioButton("RatingForBlog", 2)2</label>
           <label style="margin-right:10px">@Html.RadioButton("RatingForBlog", 3)3</label>
           <label style="margin-right:10px">@Html.RadioButton("RatingForBlog", 4)4</label>
           <label style="margin-right:10px">@Html.RadioButton("RatingForBlog", 5)5</label>
           <label style="margin-right:10px">@Html.RadioButton("RatingForBlog", 6)6</label>
           <label style="margin-right:10px">@Html.RadioButton("RatingForBlog", 7)7</label>
           <label style="margin-right:10px">@Html.RadioButton("RatingForBlog", 8)8</label>
           <label style="margin-right:10px">@Html.RadioButton("RatingForBlog", 9)9</label>
           <label style="margin-right:10px">@Html.RadioButton("RatingForBlog", 10)10</label>
        </div>
        <div class="form-group">
            <input type="submit" value="Yorum yap" class="btn btn-primary">
        </div>

    </form>
</div>
