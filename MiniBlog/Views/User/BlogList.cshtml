@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "BlogList";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
@{string color = "";}
@{string caseName = "";}
@{int puan=1;}
<!DOCTYPE html>

<html>



<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <!-- Default box -->

        <div class="card">

            <div class="card-header">

                <h3 class="card-title">Blog listem</h3>

                <div class="card-tools">

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                        <i class="fas fa-minus"></i>

                    </button>

                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">

                        <i class="fas fa-times"></i>

                    </button>

                </div>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 1%">

                                ID

                            </th>

                            <th style="width: 20%">

                                Blog Başlık

                            </th>



                            <th style="width: 20%">

                                Blog Değerlendirme Oranı

                            </th>

                            <th style="width: 8%" class="text-center">

                                Durum

                            </th>

                            <th style="width: 20%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                        
                        @foreach (var item in Model)
                        {
                            puan = item.BlogRating * 10;
                            if (puan >= 85 && puan <= 100)
                            {
                                color = "badge badge-success";
                                caseName = "Çok iyi";
                            }
                            if (puan < 85 && puan >= 70)
                            {
                                color = "badge badge-info";
                                caseName = "Başarılı";
                            }
                            if (puan < 70 && puan >= 50)
                            {
                                color = "badge badge-dark";
                                caseName = "Fena değil";
                            }
                            if (puan < 50)
                            {
                                color = "badge badge-danger";
                                caseName = "Vasat";
                            }


                            <tr>

                                <td>

                                    @item.BlogId

                                </td>
                                <td>@item.BlogTitle</td>



                                <td class="project_progress">

                                    <div class="progress progress-sm">

                                        <div class="@color" role="progressbar" aria-volumenow="@item.BlogRating"
                                             aria-volumemin="0" aria-volumemax="100" style="width: @puan%">

                                        </div>

                                    </div>

                                    <small>


                                        Puan : @item.BlogRating

                                    </small>

                                </td>

                                <td class="project-state">

                                    <span class="@color">@caseName</span>

                                </td>

                                <td class="project-actions text-right">



                                    <a class="btn btn-info btn-sm" href="/User/UpdateBlog/@item.BlogId">

                                        <i class="fas fa-pencil-alt">

                                        </i>

                                        Düzenle

                                    </a>

                                    <a class="btn btn-danger btn-sm" href="#">

                                        <i class="fas fa-trash">

                                        </i>

                                        Sil

                                    </a>

                                </td>

                            </tr>
                        }


                    </tbody>

                </table>

            </div>

            <!-- /.card-body -->

        </div>

        <!-- /.card -->

    </section>
    <a href="/User/AddNewBlog/" class="btn btn-primary">Yeni Blog Yaz</a>

</body>

</html>
