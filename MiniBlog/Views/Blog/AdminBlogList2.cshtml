@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "AdminBlogList2";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



@{int puan = 1;}
<!DOCTYPE html>

<html>



<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <!-- Default box -->

        <div class="card">

            <div class="card-header">

                <h3 class="card-title">Blog Listesi</h3>

                <div class="card-tools">

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                        <i class="fas fa-minus"></i>

                    </button>

                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">

                        <i class="fas fa-times"></i>

                    </button>

                </div>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 1%">

                                ID

                            </th>

                            <th style="width: 20%">

                                Blog Başlığı

                            </th>

                            <th style="width: 7%">

                                Yazar

                            </th>

                            <th style="width: 10%">

                                Beğeni Oranı

                            </th>

                            <th style="width: 6%" class="text-center">

                                Kategori

                            </th>

                            <th style="width: 20%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                    

                            @foreach (var item in Model)
                            {
                        <tr>

                            <td>

                                @item.BlogId

                            </td>
                            <td>@item.BlogTitle</td>


                            <td>

                                <ul class="list-inline">

                                    <li class="list-inline-item">

                                        <img alt="Avatar" class="table-avatar" src="@item.Author.AuthorImage">

                                    </li>



                                </ul>

                            </td>

                            <td class="project_progress">

                                <div class="progress progress-sm">
                                    @{puan = item.BlogRating * 10;
                                    }
                                    <div class="badge badge-success" role="progressbar" aria-volumenow="@item.BlogRating"
                                         aria-volumemin="0" aria-volumemax="100" style="width: @puan%">

                                    </div>

                                </div>

                                <small>


                                    Puan : @item.BlogRating

                                </small>

                            </td>

                            <td class="project-state">

                                <span class="badge badge-success">@item.Category.CategoryName</span>

                            </td>

                            <td class="project-actions text-right">

                                <a class="btn btn-primary btn-sm" href="/Blog/BlogDetails/@item.BlogId">

                                    <i class="fas fa-folder">

                                    </i>

                                    Sitede Gör

                                </a>

                                <a class="btn btn-info btn-sm" href="/Blog/UpdateBlog/@item.BlogId">

                                    <i class="fas fa-pencil-alt">

                                    </i>

                                    Düzenle

                                </a>

                                <a class="btn btn-danger btn-sm" href="/Blog/DeleteBlog/@item.BlogId">

                                    <i class="fas fa-trash">

                                    </i>

                                    Sil

                                </a>

                            </td>

                        </tr>
                            }


                        </tbody>

                </table>

            </div>

            <!-- /.card-body -->

        </div>

        <!-- /.card -->

    </section>

</body>

</html>


